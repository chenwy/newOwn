<section id="loginPanel">
  <div class="col-md-12 fadeInUp animated" data-wow-duration="500ms">
    <div id="loginContent">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h1><%= t("userSignUp") %></h1>
      <%= f.input :username, placeholder: t("username"), required: true, autofocus: true,label: false,  %>
      <%= f.input :email, placeholder: t("email"), required: true,label: false %>
      <%= f.input :password, label: false, required: true,  placeholder: t("password")+("  #{@minimum_password_length} characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, placeholder: t("passwordCorfirm"), label: false, required: true %>
      <div>
        <%= f.button :submit, t("submit"), data: {disable_with: t("submiting")} %>
        <%= link_to t("forgetPass"), '#' %>
        <%= link_to t("toSignIn"), new_user_session_path %>
      </div>
      <% end %>
      <div class="space"></div>
    </div>
  </div>
</section>
